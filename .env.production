# ====================================
# 本番環境用設定
# ====================================

# アプリケーション設定
VITE_APP_NAME="ことだまモンスタークイズ"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="楽しみながら日本語を学べる教育ゲーム"

# 環境設定
VITE_APP_ENV=production

# デバッグモード（本番環境では無効）
VITE_DEBUG_MODE=false

# アナリティクス設定
VITE_GA_TRACKING_ID=""
VITE_ANALYTICS_ENABLED=false

# APIエンドポイント（将来的なバックエンド連携用）
VITE_API_BASE_URL="https://api.kotodama-monster.com"
VITE_API_TIMEOUT=30000

# 機能フラグ
VITE_FEATURE_ONLINE_RANKING=false
VITE_FEATURE_CLOUD_SAVE=false
VITE_FEATURE_SOCIAL_SHARE=false
VITE_FEATURE_ACHIEVEMENTS_EXTENDED=true

# セキュリティ設定
VITE_CSP_ENABLED=true

# パフォーマンス設定
VITE_LAZY_LOAD_IMAGES=true
VITE_ENABLE_ANIMATIONS=true

# 開発者向け設定（本番環境では無効）
VITE_SHOW_ERROR_DETAILS=false
VITE_SHOW_PERFORMANCE_METRICS=false

# ストレージ設定
VITE_STORAGE_PREFIX="pmq_"
VITE_AUTO_BACKUP_INTERVAL=300000

# ゲーム設定のデフォルト値
VITE_DEFAULT_VOLUME=0.7
VITE_DEFAULT_DIFFICULTY="小学生"
VITE_QUESTIONS_PER_SESSION=10