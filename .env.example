# ====================================
# 環境変数設定ファイルのサンプル
# ====================================
# このファイルを .env としてコピーして使用してください
# cp .env.example .env

# アプリケーション設定
VITE_APP_NAME="ことだまモンスタークイズ"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="楽しみながら日本語を学べる教育ゲーム"

# 環境設定
# development | staging | production
VITE_APP_ENV=development

# デバッグモード (本番環境では false に設定)
VITE_DEBUG_MODE=true

# アナリティクス設定（将来的な拡張用）
# Google Analytics や他の分析ツールのIDを設定
VITE_GA_TRACKING_ID=""
VITE_ANALYTICS_ENABLED=false

# APIエンドポイント（将来的なバックエンド連携用）
VITE_API_BASE_URL="https://api.example.com"
VITE_API_TIMEOUT=30000

# 機能フラグ（特定の機能のON/OFF）
VITE_FEATURE_ONLINE_RANKING=false
VITE_FEATURE_CLOUD_SAVE=false
VITE_FEATURE_SOCIAL_SHARE=false
VITE_FEATURE_ACHIEVEMENTS_EXTENDED=true

# セキュリティ設定
# CSP (Content Security Policy) の設定
VITE_CSP_ENABLED=true

# パフォーマンス設定
# 画像の遅延読み込み
VITE_LAZY_LOAD_IMAGES=true
# アニメーションの有効/無効
VITE_ENABLE_ANIMATIONS=true

# 開発者向け設定
# エラー詳細の表示
VITE_SHOW_ERROR_DETAILS=true
# パフォーマンス測定の表示
VITE_SHOW_PERFORMANCE_METRICS=false

# ストレージ設定
# localStorage のプレフィックス
VITE_STORAGE_PREFIX="pmq_"
# データの自動バックアップ間隔（ミリ秒）
VITE_AUTO_BACKUP_INTERVAL=300000

# ゲーム設定のデフォルト値
# デフォルトの音量（0-1）
VITE_DEFAULT_VOLUME=0.7
# デフォルトの難易度
VITE_DEFAULT_DIFFICULTY="小学生"
# 1セッションあたりの問題数
VITE_QUESTIONS_PER_SESSION=10